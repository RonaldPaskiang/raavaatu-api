{
  "openapi": "3.0.0",
  "info": {
    "title": "Raavaatu Memory API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://2d8c-160-2-233-100.ngrok-free.app"
    }
  ],
  "paths": {
    "/ask": {
      "post": {
        "summary": "Ask Raavaatu a question",
        "operationId": "askRaavaatu",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "The question or prompt to ask Raavaatu."
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response from Raavaatu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reply": {
                      "type": "string",
                      "description": "Raavaatu's response to the prompt."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
